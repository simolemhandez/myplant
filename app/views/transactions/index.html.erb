</div>
  <div class="container2">
    <div class="row">
    <% @transactions.each do |transaction| %>

      <%= link_to plant_path(Plant.find(transaction.plant_id))  do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card-product">
            <%= cl_image_tag Plant.find(transaction.plant_id).photo, crop: :fill %>
            <div class="card-product-infos">
            <ul>
              <li><%= Plant.find(transaction.plant_id).name %></li>
              <li> <p> <%=Plant.find(transaction.plant_id).description %> </p></li>
              <li> <p> Prix mensuel : <%= Plant.find(transaction.plant_id).pricepermonth%>€ </p></li>
              <li> <p> Vous avez loué cette plante du <strong> <%= transaction.start_date %></strong> jusqu'au <strong> <%= transaction.end_date %></strong></p></li>
              <li> <p id="owner"> Posté par : <%= Plant.find(transaction.plant_id).user.name %> </p> </li>
              <li>
                <% if transaction.status == 'accepted' %>
                  <p>Status: <i class="fas fa-check"></i></p>
                <%  else %>
                  <p><strong> Status:</strong> Pending</p>
                <% end %>
              </li>
            </ul>
            <%= cl_image_tag Plant.find(transaction.plant_id).user.photo, class: "card-avatar avatar" %>
          </div>
        </div>
      </div>
      <%end %>
      <% end %>
    </div>
</div>


