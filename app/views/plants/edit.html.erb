
<h1>Edit plant</h1>
<%= simple_form_for(@plant) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :origin %>
    <%= f.input :availability %>
    <%= f.input :pricepermonth %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit %>
<% end %>

