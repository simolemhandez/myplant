<h1><%= @user.email %> </h1>
<h1><%= @user.name %> </h1>
<h1><%= @user.location %> </h1>
<%= cl_image_tag @user.photo, class: "avatar dropdown-toggle", height: 300, width: 400, crop: :fill %>

<%= link_to "Edit profile", edit_user_registration_path %>

<% @user.plants.each do |plant|%>
  <h2>  <%= plant.name %></h2>
  <p> Description : <%= plant.description %></p>
  <p> Availability : <%= plant.availability %></p>
  <p> Origin : <%= plant.origin %></p>
  <p> Price per month : <%= plant.pricepermonth %></p>
<% end %>



